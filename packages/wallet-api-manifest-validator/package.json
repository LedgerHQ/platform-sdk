{
  "name": "@ledgerhq/wallet-api-manifest-validator",
  "version": "1.0.0",
  "description": "This package checks if your manifest.json file meets the requirements for Ledger Live App manifest submission.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsup src/ && tsup cli",
    "format:check": "prettier --check \"src\" \"tests\"",
    "format:fix": "prettier --write \"src\" \"tests\"",
    "lint": "eslint --cache --ext .ts \"src\" \"tests\"",
    "lint:fix": "eslint --cache --fix --ext .ts \"src\" \"tests\"",
    "prepare": "tsup src/ && tsup cli",
    "test": "jest tests/*.test.*",
    "validate": "dist/cli.js"
  },
  "bin": {
    "validate": "dist/cli.js"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/cli-color": "^2.0.2",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.4",
    "jest": "^29.1.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "tsup": "^6.2.3"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-errors": "^3.0.0",
    "cli-color": "^2.0.3"
  }
}
