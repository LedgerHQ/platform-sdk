{
  "name": "@ledgerhq/wallet-api-manifest-validator",
  "version": "1.0.0",
  "description": "This package checks if your manifest.json file meets the requirements for Ledger Live App manifest submission.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs,iife && tsup cli/cli.ts --dts dist/cli --format esm,cjs,iife",
    "format:check": "prettier --check \"src\" \"cli\" \"tests\"",
    "format:fix": "prettier --write \"src\" \"cli\" \"tests\"",
    "lint": "eslint --cache --ext .ts \"src\" \"cli\" \"tests\"",
    "lint:fix": "eslint --cache --fix --ext .ts \"src\" \"cli\" \"tests\"",
    "test": "jest ",
    "validate": "dist/cli.js"
  },
  "bin": {
    "validate": "dist/cli.js"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/cli-color": "^2.0.2",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.4",
    "@types/node-fetch": "^2.6.2",
    "jest": "^29.1.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@ledgerhq/wallet-api-core": "workspace:^0.1.0",
    "ajv": "^8.11.0",
    "ajv-errors": "^3.0.0",
    "clipanion": "3.2.0-rc.13",
    "node-fetch": "2"
  }
}
